@model IEnumerable<ThuHuong_Test.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/share/_LayoutPageQly.cshtml";
}

<div style="width:100%; height :100px;padding:10px">
    @foreach (var item in Model)
    {
        <div style="width: 200px; height:150px; float: left;margin-left : 20px;margin-bottom:20px; border: 1px solid #000000">
            @item.tieuDe<br />
            <center><img src="../HinhAnh/@item.hinhAnh" width="150" height="100" /><br /></center>
            <a href="@Url.Action("Create","QlySach")">Them Moi</a>
        </div>
    }
</div>

